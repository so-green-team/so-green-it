{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://sogreen.it/schemas/input.json",
    "description": "User input for API call",
    "type": "object",
    "required": ["url"],
    "properties": {
        "url": {
            "type": "string",
            "format": "uri"
        },
        "project": {
            "type": "string"
        },
        "includeRules": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 0,
                "uniqueItems": true
            },
            "default": []
        },
        "excludeRules": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 0,
                "uniqueItems": true
            },
            "default": []
        }
    }
}